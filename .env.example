# Environment variables for RAGFlow setup
# Copy this file to .env and modify as needed

# RAGFlow Configuration
RAGFLOW_IMAGE=infiniflow/ragflow:v0.19.1-slim
RAGFLOW_VERSION=v0.19.1-slim

# Database Configuration (MySQL)
MYSQL_ROOT_PASSWORD=infiniflow
MYSQL_DATABASE=ragflow
MYSQL_USER=ragflow
MYSQL_PASSWORD=infiniflow

# Redis Configuration
REDIS_PASSWORD=infiniflow

# MinIO Configuration
MINIO_ROOT_USER=root
MINIO_ROOT_PASSWORD=12345678

# Elasticsearch Configuration
ES_JAVA_OPTS=-Xms1g -Xmx1g

# Timezone
TZ=Asia/Shanghai

# Optional: OpenAI API Key for external LLM services
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: HuggingFace settings
# HF_ENDPOINT=https://hf-mirror.com
